    </servlet-mapping>

    <servlet>
        <servlet-name>internships_list_company</servlet-name>
        <servlet-class>controller.servlets.internshipsCompanyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>internships_list_company</servlet-name>
        <url-pattern>/internships_list_company</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>internships_list</servlet-name>
        <servlet-class>controller.servlets.internshipsListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>internships_list</servlet-name>
        <url-pattern>/internships_list</url-pattern>
    </servlet-mapping>


    <!--
        Prevent the visiting of MVC Views from outside the servlet container.
        RequestDispatcher.forward/include should and will still work. Removing
        this may open security holes!
    -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>FreeMarker MVC Views</web-resource-name>
            <url-pattern>*.ftl</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <!-- Nobody is allowed to visit these -->
        </auth-constraint>
    </security-constraint>

</web-app>
